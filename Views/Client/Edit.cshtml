@model PetRescue.Models.Client

@{
    ViewData["Title"] = "Edit Client Details";
}

<div class="text-left">
    <h1 class="display-5">Edit Client</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="fw-bold form-group">
                <label asp-for="Name" class="control-label">Name *</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="fw-bold form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="fw-bold form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="fw-bold form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="fw-bold form-group">
                @Html.LabelFor(model => model.UserID, "User", htmlAttributes: new { @class="control-label" })
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.UserID, @ViewBag.UserID as List<SelectListItem>, "Select User", new { @class="form-control" })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class="text-danger" })
                </div>
            </div>
            <div class="mt-3 form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to Clients List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
