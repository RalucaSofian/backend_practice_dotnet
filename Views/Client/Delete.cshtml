@model PetRescue.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<div class="text-left">
    <h1 class="display-5">Delete Client</h1>
</div>

<div class="text-left">
    <h3 class="display-6">Are you sure you want to delete this?</h3>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10" style="@(Model.Address is null ? @Html.Raw("color:orangered") : @Html.Raw(Model.Address))">
            @(Model.Address is null ? "NOT SET" : Model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10" style="@(Model.Phone is null ? @Html.Raw("color:orangered") : @Html.Raw(Model.Phone))">
            @(Model.Phone is null ? "NOT SET" : Model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10" style="@(Model.Description is null ? @Html.Raw("color:orangered") : @Html.Raw(Model.Description))">
            @(Model.Description is null ? "NOT SET" : Model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class = "col-sm-10" >
            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserID">
                @(Model.UserID is null ? "-" : Model.UserID)
            </a>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure?')" />
    </form>
</div>
<div class="mt-4">
    <a asp-action="Index">Back to Clients List</a>
</div>
