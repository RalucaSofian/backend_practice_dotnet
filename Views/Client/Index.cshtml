@using Microsoft.IdentityModel.Tokens
@using PetRescue.Utilities

@model PaginatedList<PetRescue.Models.Client>


@{
    ViewData["Title"] = "Clients";
}

<div class="text-left">
    <h1 class="display-5">Clients List ðŸ™‹</h1>
</div>

<a class="btn btn-lg btn-outline-primary" asp-action="Create">Add New Client</a>

<form method="get" id="searchForm" class="mt-3 col-sm-3" asp-controller="Client" asp-action="Index">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@ViewData["SearchString"]"/>
        <button title="Search" class="input-group-text icon-link align-middle material-symbols-outlined" onclick="searchSubmit(event)">search</button>
    </div>
</form>

<form method="get" id="filterForm" class="mt-3 col-m-3" asp-controller="Client" asp-action="Index">
    <div class="row">
        <div class="col-sm-3">
            <label>Has User Set:</label>
            <select name="hasUser" class="form-control" asp-for="@ViewData["UserSetFilter"]" asp-items="ViewBag.HasUserOptions">
                <option default value="">Select Option</option>
            </select>
        </div>
        <div class="col-sm-3">
            <label>User Email:</label>
            <select name="userId" class="form-control" asp-for="@ViewData["UserMailFilter"]" asp-items="ViewBag.UserEmailOptions">
                <option default value="">Select User</option>
            </select>
        </div>
        <div class="col-sm-1 d-flex flex-column justify-content-end">
            <button title="Apply all Filters" class="btn btn-sm btn-outline-primary" onclick="filterSubmit(event)">Filter</button>
        </div>
    </div>
</form>


<table class="table table-hover mt-3 display-7">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextIdSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "id_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "id_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Name
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextNameSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "name_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "name_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Address
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextAddrSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "addr_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "addr_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Phone</th>
            <th scope="col">Description</th>
            <th scope="col">User
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextUserSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "user_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "user_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
@if(Model.Count <= 0) {
        <tr>
            <td style="text-align: center; font-size: 2rem; font-weight: 300;" colspan="7">
                @if((ViewData["SearchString"]! != null) ||
                    (ViewData["UserSetFilter"]! != null) ||
                    (ViewData["UserMailFilter"]! != null)) {
                    <text>No Results found.</text>
                } else {
                    <text>No Clients registered.</text>
                }
            </td>
        </tr>
}
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="@(item.Address is null ? "color:orangered" : item.Address)">
                @(item.Address is null ? "NOT SET" : item.Address)
            </td>
            <td style="@(item.Phone is null ? "color:orangered" : item.Phone)">
                @(item.Phone is null ? "NOT SET" : item.Phone)
            </td>
            <td style="@(item.Description is null ? "color:orangered" : item.Description)">
                @(item.Description is null ? "NOT SET" : item.Description)
            </td>
            <td>
                <a style="@(item.UserID is null ? "text-decoration:none; color:orangered" : item.User?.UserName)"
                    asp-controller="Users" asp-action="Details" asp-route-id="@item.UserID">
                        @(item.UserID is null ? "NOT SET" : item.User?.UserName)
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="icon-link" title="Details">
                    <span class="material-symbols-outlined">more_horiz</span>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="icon-link" title="Edit">
                    <span class="material-symbols-outlined">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="icon-link" title="Delete">
                    <span class="material-symbols-outlined">delete</span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<button class="btn btn-outline-primary @prevDisabled" onclick="pagingSubmit(@ViewData["CrtPage"] - 1)">
    Prev
</button>

<button class="btn btn-outline-primary @nextDisabled" onclick="pagingSubmit(@ViewData["CrtPage"] + 1)">
    Next
</button>
