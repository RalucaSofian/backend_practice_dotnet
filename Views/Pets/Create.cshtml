@model PetRescue.Models.Pet

@{
    ViewData["Title"] = "Add New Pet";
}

<div class="text-left">
    <h1 class="display-5">Add New Pet</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group, fw-bold">
                <label asp-for="Name" class="control-label">Name *</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group, fw-bold">
                <label asp-for="Species" class="control-label">Species *</label>
                <select asp-for="Species" id="Pet.Species" class="form-control">
                    <option value="">-- Select Species --</option>
                    <option value="Bird">Bird</option>
                    <option value="Cat">Cat</option>
                    <option value="Dog">Dog</option>
                    <option value="Lizard">Lizard</option>
                    <option value="Rodent">Rodent</option>
                    <option value="Snake">Snake</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group, fw-bold">
                <label asp-for="Gender" class="control-label">Gender *</label>
                <select asp-for="Gender" id="Pet.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="M">M</option>
                    <option value="F">F</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group, fw-bold">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group, fw-bold">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group, fw-bold">
                <label asp-for="PhotoUrl" class="control-label">Photo URL</label>
                <textarea asp-for="PhotoUrl" class="form-control" rows="1"></textarea>
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="mt-3 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to Pets List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
