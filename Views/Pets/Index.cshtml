@using Microsoft.IdentityModel.Tokens
@using PetRescue.Utilities

@model PaginatedList<PetRescue.Models.Pet>


@{
    ViewData["Title"] = "Pets";
}

<div class="text-left">
    <h1 class="display-5">Pets List üê∂</h1>
</div>

<a class="btn btn-lg btn-outline-primary" asp-action="Create">Add New Pet</a>

<form method="get" id="searchForm" class="mt-3 col-sm-3" asp-controller="Pets" asp-action="Index">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@ViewData["SearchString"]"/>
        <button title="Search" class="input-group-text icon-link align-middle material-symbols-outlined" onclick="searchSubmit(event)">search</button>
    </div>
</form>

<form method="get" id="filterForm" class="mt-3 col-m-3" asp-controller="Pets" asp-action="Index">
    <div class="row">
        <div class="col">
            <label>Species:</label>
            <select name="animalSpecies" class="form-control" asp-for="@ViewData["SpeciesFilter"]" asp-items="ViewBag.SpeciesOptions">
                <option default value="">Select Species</option>
            </select>
        </div>
        <div class="col">
            <label>Gender:</label>
            <select name="animalGender" class="form-control" asp-for="@ViewData["GenderFilter"]" asp-items="ViewBag.GenderOptions">
                <option default value="">Select Gender</option>
            </select>
        </div>
        <div class="col">
            <label>Age from:</label>
            <input type="number" name="age_gte" class="form-control" value="@ViewData["AgeGteFilter"]"/>
        </div>
        <div class="col">
            <label>Age to:</label>
            <input type="number" name="age_lte" class="form-control" value="@ViewData["AgeLteFilter"]"/>
        </div>
        <div class="col-sm-1 d-flex flex-column justify-content-end">
            <button title="Apply all Filters" class="btn btn-sm btn-outline-primary" onclick="filterSubmit(event)">Filter</button>
        </div>
    </div>
</form>

<table class="table table-hover mt-3 display-7">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextIdSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "id_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "id_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Name
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextNameSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "name_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "name_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Species
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextSpeciesSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "species_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "species_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Gender
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextGenderSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "gender_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "gender_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Age
                <span class="icon-link align-bottom material-symbols-outlined" onclick="orderSubmit('@ViewData["NextAgeSort"]')">
                    @if((string)@ViewData["CrtSortOrder"]! == "age_asc") {
                        <text>keyboard_arrow_up</text>
                    } else if((string)@ViewData["CrtSortOrder"]! == "age_desc") {
                        <text>keyboard_arrow_down</text>
                    } else {
                        <text>expand_all</text>
                    }
                </span>
            </th>
            <th scope="col">Description</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
@if(Model.Count <= 0) {
        <tr>
            <td style="text-align: center; font-size: 2rem; font-weight: 300;" colspan="7">
               

                @if((!string.IsNullOrEmpty((string)ViewData["SearchString"]!)) || (!string.IsNullOrEmpty((string)ViewData["SpeciesFilter"]!)) ||
                    (!string.IsNullOrEmpty((string)ViewData["GenderFilter"]!)) || ((int)ViewData["AgeGteFilter"]! != 0) ||
                    ((int)ViewData["AgeLteFilter"]! != 0)) {
                    <text>No Results found.</text>
                } else {
                    <text>No Pets registered.</text>
                }
            </td>
        </tr>
}
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="text-capitalize">
                <a asp-controller="Pets" asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: black;">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td style="@(item.Age is null ? @Html.Raw("color:orangered") : @Html.Raw(item.Age))">
                @(item.Age is null ? "NOT SET" : item.Age)
            </td>
            <td class="long-text text-truncate" style="@(item.Description is null ? @Html.Raw("color:orangered") : @Html.Raw(item.Description))">
                @(item.Description is null ? "NOT SET" : item.Description)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="icon-link", title="Details">
                    <span class="material-symbols-outlined">more_horiz</span>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="icon-link", title="Edit">
                    <span class="material-symbols-outlined">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="icon-link", title="Delete">
                    <span class="material-symbols-outlined">delete</span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<button class="btn btn-outline-primary @prevDisabled" onclick="pagingSubmit(@ViewData["CrtPage"] - 1)">
    Prev
</button>

<button class="btn btn-outline-primary @nextDisabled" onclick="pagingSubmit(@ViewData["CrtPage"] + 1)">
    Next
</button>
