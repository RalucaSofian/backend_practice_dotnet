@using Microsoft.AspNetCore.Identity
@using PetRescue.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Admin" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right" >
            <li class="mt-2 me-2">
                <a asp-controller="Manage" asp-action="Index" title="Account Details">
                    Welcome, @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="ms-2 me-2">
                <button type="submit" class="btn btn-outline-primary navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="@(Context.Request.Path == "/admin/login" ? "active":"") nav-item ms-2 me-2">
            <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="Login">Login</a>
        </li>
    </ul>
}
