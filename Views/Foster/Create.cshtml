@model PetRescue.Models.Foster

@{
    ViewData["Title"] = "Add New Foster";
}

<div class="text-left">
    <h1 class="display-5">Add New Foster</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group fw-bold">
                <label asp-for="ClientID" class="control-label">Client *</label>
                <select asp-for="ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group fw-bold">
                <label asp-for="PetID" class="control-label">Pet *</label>
                <select asp-for="PetID" class ="form-control" asp-items="ViewBag.PetID"></select>
            </div>
            <div class="form-group fw-bold">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group fw-bold">
                <label asp-for="StartDate" class="control-label">Start Date *</label>
                <input asp-for="StartDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group fw-bold">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="mt-2 text-danger"></div>
            <div class="mt-3 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to Foster List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
